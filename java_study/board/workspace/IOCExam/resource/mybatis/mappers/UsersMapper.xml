<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="kr.co.multi.IOCExam.dao.UsersMapper">
	<resultMap type="kr.co.multi.IOCExam.dto.User" id="user_resultMap">
		<result column="join_date" property="joinDate"/>
	</resultMap>
	
	
	<select id="getUser" parameterType="java.lang.String" resultMap="user_resultMap">
		select id, name, password, email, join_date from users where id = #{id}
	</select>
	<insert id="addUser" parameterType="kr.co.multi.IOCExam.dto.User">
		insert into users values(#{id},#{name},#{password},#{email},sysdate)
	</insert>
</mapper>